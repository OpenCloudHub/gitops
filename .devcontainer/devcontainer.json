{
	"name": "OpenCloudHUb - GitOps Development",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers-extra/features/pre-commit:2": {},
		"ghcr.io/devcontainers-extra/features/act:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers-extra/features/kind:1": {},
		"ghcr.io/devcontainers/features/go:1": {},
		"ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {
			"jqVersion": "latest",
			"yqVersion": "latest"
		},
		"ghcr.io/jungaretti/features/make:1": {},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"minikube": "latest"
		},
		"ghcr.io/audacioustux/devcontainers/kustomize:1": {}
	},
	// TODO: mount /etc/kubernetes so i dont get error: stat /etc/kubernetes/admin.conf: no such file or directory when running kubectl commands in devcontaienr
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
		"source=${localEnv:HOME}/.ssh/opencloudhub,target=/home/vscode/.ssh/opencloudhub,type=bind,readonly",
		"source=${localEnv:HOME}/.kube,target=/home/vscode/.kube,type=bind"
	],
	"runArgs": ["--gpus", "all"],
	"postCreateCommand": "bash scripts/devcontainer-postCreate.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				// Code completion and AI
				"GitHub.copilot",
				"GitHub.copilot-chat",
				// Code formatting and linting
				"ms-azuretools.vscode-docker",
				"ms-vscode.makefile-tools",
				"nhoizey.gremlins",
				"yzhang.markdown-all-in-one",
				// Project management
				"Gruntfuggly.todo-tree",
				"eamodio.gitlens",
				// Visuals
				"oderwat.indent-rainbow"
			],
			"settings": {
				"editor.tabSize": 2,
				"editor.autoIndent": "advanced",
				"editor.formatOnPaste": true,
				"editor.formatOnSave": true,
				"github.copilot.nextEditSuggestions.enabled": true,
				// Intent rainbow
				"indentRainbow.indicatorStyle": "light",
				"indentRainbow.lightIndicatorStyleLineWidth": 1,
				"indentRainbow.colors": [
					"rgba(255,255,64,0.3)",
					"rgba(127,255,127,0.3)",
					"rgba(255,127,255,0.3)",
					"rgba(79,236,236,0.3)"
				],
				// The indent color if the number of spaces is not a multiple of "tabSize".
				"indentRainbow.errorColor": "rgba(128,32,32,0.6)"
			}
		}
	},
	"remoteUser": "vscode"
}
